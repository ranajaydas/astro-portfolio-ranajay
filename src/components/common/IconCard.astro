---
/* Card with an icon on top */
import Icon from "@components/common/Icon.astro";

export interface Props {
  iconSrc: string;
  title: string;
  description: string;
}

const { iconSrc, title, description } = Astro.props;
---

<div
  class="flex flex-col max-w-[250px] justify-start items-center text-center mx-2"
>
  <Icon src={iconSrc} class="h-[240px] mt-16 mb-8 lg:mb-[100px]" />
  <h3 class="mb-5">{title}</h3>
  <p>{description}</p>
</div>
